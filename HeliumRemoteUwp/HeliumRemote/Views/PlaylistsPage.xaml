<Page
    x:Class="HeliumRemote.Views.PlaylistsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Loaded="PlaylistsPage_OnLoaded"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" x:Name="RootGrid">
        <ListBox x:Name="ItemsLb" 
                 SelectionChanged="{x:Bind _vm.OnSelectionChanged}"
                 ItemContainerStyle="{StaticResource ListBoxItemContainerStyle}"
                 Background="{StaticResource DefaultBgBrush}"
                 ItemTemplate="{StaticResource PlaylistItem}" 
                 ItemsSource="{Binding Playlists}">
        </ListBox>
    </Grid>
</Page>
