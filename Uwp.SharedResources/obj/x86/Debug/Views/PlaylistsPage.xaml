<Page x:ConnectionId='1'
    x:Class="Uwp.SharedResources.Views.PlaylistsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                                   
    mc:Ignorable="d">

    <Grid x:ConnectionId='2' Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" x:Name="RootGrid">
        <ListBox x:ConnectionId='3' x:Name="ItemsLb" 
                                                                   
                 ItemContainerStyle="{StaticResource ListBoxItemContainerStyle}"
                 Background="{StaticResource DefaultBgBrush}"
                 ItemTemplate="{StaticResource PlaylistItem}" 
                 ItemsSource="{Binding Playlists}">
        </ListBox>
    </Grid>
</Page>

